{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Backend – FastAPI",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": ["wngw_app.main:app", "--reload", "--port", "8000"],
      "cwd": "${workspaceFolder}/backend",
      "justMyCode": true,
      "env": {
        "PYTHONPATH": "${workspaceFolder}/backend"
      }
    },
    {
      "name": "Frontend – Vite",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev",
      "cwd": "${workspaceFolder}/frontend"
    }
  ],
  "compounds": [
    {
      "name": "All – Backend + Frontend",
      "configurations": [
        "Backend – FastAPI",
        "Frontend – Vite"
      ]
    }
  ]
}
